; (< -- ввод пользователя через файл ввода, > вывод симулятора):

(setq buffer-size (512))
(setq buffer (alloc buffer-size))

(print "> What is your name?\n")
(print "> ")
(print (read(buffer buffer-size)))
(print "> Hello, ")
(print buffer)
(print "!")
